<script>
// Advert Carousel Logic – no dots
document.addEventListener('DOMContentLoaded', () => {
  const track = document.getElementById('adsTrack');
  const prevBtn = document.getElementById('adPrev');
  const nextBtn = document.getElementById('adNext');
  if (!track || !prevBtn || !nextBtn) {
    console.warn('Advert carousel elements not found');
    return;
  }
  let currentIndex = 0;
  const slides = track.children.length;
  function updateCarousel() {
    track.style.transform = `translateX(-${currentIndex * 100}%)`;
  }
  nextBtn.addEventListener('click', () => {
    currentIndex = (currentIndex + 1) % slides;
    updateCarousel();
  });
  prevBtn.addEventListener('click', () => {
    currentIndex = (currentIndex - 1 + slides) % slides;
    updateCarousel();
  });
  // Mobile swipe
  let touchStartX = 0;
  let touchEndX = 0;
  track.addEventListener('touchstart', e => {
    touchStartX = e.changedTouches[0].screenX;
  }, { passive: true });
  track.addEventListener('touchend', e => {
    touchEndX = e.changedTouches[0].screenX;
    const diff = touchStartX - touchEndX;
    if (Math.abs(diff) > 60) {
      currentIndex = diff > 0
        ? (currentIndex + 1) % slides
        : (currentIndex - 1 + slides) % slides;
      updateCarousel();
    }
  }, { passive: true });
  updateCarousel(); // initial
});
</script>

                <button class="modal-nav modal-next">&#10095;</button>
                <div class="modal-dots" id="modalDots"></div>
            </div>
            <div class="modal-details">
                <h3 id="modalTitle"></h3>
                <p id="modalDesc"></p>
                <p class="modal-price" id="modalPrice"></p>
                <button class="buy-btn">Inquire Now</button>
            </div>
